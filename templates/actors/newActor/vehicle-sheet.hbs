<form class="{{cssClass}} flexcol" autocomplete="off">
    <header class="sheet-header flexrow">
        <img class="profile" src="{{actor.img}}" title="{{actor.name}}" alt="{{actor.name}}" data-edit="img">
        <section class="header-details flexrow">
            {{> "sw5e.swalt-warnings"}}

            <h1 class="charname">
                <input name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'SW5E.Name'}}">
            </h1>
            <ul class="summary flexrow">
                <li>
                    <span>{{lookup config.actorSizes system.traits.size}}</span>
                </li>
                <li>
                    <select name="system.vehicleType">
                        {{selectOptions config.vehicleTypes selected=system.vehicleType}}
                    </select>
                </li>
                <li>
                    <input
                        type="text"
                        name="system.traits.dimensions"
                        value="{{system.traits.dimensions}}"
                        placeholder="{{localize 'SW5E.Dimensions'}}"
                    >
                </li>
                <li>
                    <input
                        type="text"
                        name="system.details.source"
                        value="{{system.details.source}}"
                        placeholder="{{localize 'SW5E.Source'}}"
                    >
                </li>
            </ul>
            <ul class="attributes flexrow">
                <li class="attribute health">
                    <h4 class="attribute-name box-title">{{localize 'SW5E.Health'}}</h4>
                    <div class="attribute-value multiple">
                        <input name="system.attributes.hp.value" type="number" step="any"
                            value="{{system.attributes.hp.value}}" placeholder="&mdash;"
                            title="{{localize 'SW5E.HitPointsCurrent'}}">
                        <span class="sep"> &sol; </span>
                        <input name="system.attributes.hp.max" type="number" step="any"
                            value="{{system.attributes.hp.max}}" placeholder="&mdash;"
                            title="{{localize 'SW5E.HitPointsMax'}}">
                    </div>
                    <footer class="attribute-footer">
                        <input class="temphp" name="system.attributes.hp.dt" type="number" step="any"
                            placeholder="{{localize 'SW5E.Threshold'}}"
                            value="{{system.attributes.hp.dt}}"
                            title="{{localize 'SW5E.DamageThreshold'}}">
                        <input class="temphp" name="system.attributes.hp.mt" type="number" step="any"
                            placeholder="{{localize 'SW5E.VehicleMishap'}}"
                            value="{{system.attributes.hp.mt}}"
                            title="{{localize 'SW5E.VehicleMishapThreshold'}}">
                    </footer>
                </li>
                <li class="attribute">
                    <h4 class="attribute-name box-title">{{localize 'SW5E.ArmorClass'}}</h4>
                    <div class="attribute-value">
                        {{numberInput system.attributes.ac.flat name="system.attributes.ac.flat"
                            placeholder="&mdash;"}}
                    </div>
                    <footer class="attribute-footer">
                        <input type="text" name="system.attributes.ac.motionless"
                               placeholder="&mdash;" value="{{system.attributes.ac.motionless}}"
                               title="{{localize 'SW5E.ArmorClassMotionless'}}">
                    </footer>
                </li>
                <li class="attribute movement">
                    <h4 class="attribute-name box-title">
                        {{ localize "SW5E.Movement" }}
                        <a class="config-button" data-action="movement" title="{{localize 'SW5E.MovementConfig'}}"
                            ><i class="fas fa-cog"></i
                        ></a>
                    </h4>
                    <div class="attribute-value">
                        <span>{{movement.primary}}</span>
                    </div>
                    <footer class="attribute-footer">
                        <span>{{movement.special}}</span>
                    </footer>
                </li>
            </ul>
        </section>
    </header>

    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="attributes">{{localize 'SW5E.Attributes'}}</a>
        <a class="item" data-tab="features">{{localize 'SW5E.Features'}}</a>
        <a class="item" data-tab="cargo">{{localize 'SW5E.VehicleCargoCrew'}}</a>
        <a class="item" data-tab="effects">{{ localize "SW5E.Effects" }}</a>
        <a class="item" data-tab="biography">{{localize 'SW5E.Description'}}</a>
    </nav>

    <section class="sheet-body">
        <div class="tab attributes flexrow" data-group="primary" data-tab="attributes">
            <ul class="ability-scores flexrow">
                {{#each system.abilities as |ability id|}}
                <li class="ability" data-ability="{{id}}">
                    <h4 class="ability-name box-title rollable">{{ability.label}}</h4>
                    {{numberInput ability.value name=(concat "system.abilities." id ".value")
                        class="ability-score" placeholder="0"}}
                    <div class="ability-modifiers flexrow">
                        <span class="ability-mod" title="{{localize 'SW5E.Modifier'}}">
                            {{numberFormat ability.mod decimals=0 sign=true}}
                        </span>
                    </div>
                </li>
                {{/each}}
            </ul>
            <section class="center-pane flexcol">
                <div class="counters">
                    <div class="counter flexrow creature-cap">
                        <h4>{{localize 'SW5E.VehicleCreatureCapacity'}}</h4>
                        <div class="counter-value">
                            <input
                                type="text"
                                placeholder="&mdash;"
                                name="system.attributes.capacity.creature"
                                value="{{system.attributes.capacity.creature}}"
                            >
                        </div>
                    </div>
                    <div class="counter flexrow cargo-cap">
                        <h4>{{localize 'SW5E.VehicleCargoCapacity'}}</h4>
                        <div class="counter-value">
                            {{numberInput system.attributes.capacity.cargo name="system.attributes.capacity.cargo"
                                placeholder="0"}}
                        </div>
                    </div>
                    <div class="counter flexrow stations">
                        <h4>{{localize 'SW5E.VehicleActionStations'}}</h4>
                        <div class="counter-value">
                            <input
                                name="system.attributes.actions.stations"
                                type="checkbox"
                                data-dtype="Boolean"
                                value="{{system.attributes.actions.stations}}"
                                {{checked
                                system.attributes.actions.stations}}
                            >
                        </div>
                    </div>
                    <div class="counter flexrow actions">
                        <h4>{{localize 'SW5E.ActionPl'}}</h4>
                        <div class="counter-value">
                            <input name="system.attributes.actions.value" type="number" step="any"
                                value="{{system.attributes.actions.value}}" placeholder="0"
                                title="{{localize 'SW5E.VehicleActionsHint'}}">
                        </div>
                    </div>
                    <div class="counter flexrow action-thresholds">
                        <h4>{{localize 'SW5E.VehicleActionThresholds'}}</h4>
                        <div class="counter-value">
                            <span class="sep">&lt;</span>
                            <input name="system.attributes.actions.thresholds.2" type="number" step="any"
                                value="{{system.attributes.actions.thresholds.[2]}}" placeholder="&mdash;"
                                title="{{localize 'SW5E.VehicleActionThresholdsFull'}}">
                            <span class="sep">&lt;</span>
                            <input name="system.attributes.actions.thresholds.1" type="number" step="any"
                                value="{{system.attributes.actions.thresholds.[1]}}" placeholder="&mdash;"
                                title="{{localize 'SW5E.VehicleActionThresholdsMid'}}">
                            <span class="sep">&lt;</span>
                            <input name="system.attributes.actions.thresholds.0" type="number" step="any"
                                value="{{system.attributes.actions.thresholds.[0]}}" placeholder="&mdash;"
                                title="{{localize 'SW5E.VehicleActionThresholdsMin'}}">
                        </div>
                    </div>
                </div>
                {{> "sw5e.swalt-traits"}}
            </section>
        </div>

        <div class="tab features flexcol" data-group="primary" data-tab="features">
            {{> "sw5e.swalt-features" sections=features}}
        </div>

        <div class="tab cargo flexcol" data-group="primary" data-tab="cargo">
            {{> "sw5e.swalt-inventory" sections=cargo}}
        </div>
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "sw5e.active-effects"}}
        </div>
        <div class="tab biography flexcol" data-group="primary" data-tab="biography">
            {{editor 
				biographyHTML 
				target="system.details.biography.value" 
				button=true editable=editable
				engine="prosemirror" 
				collaborate=false
			}}
        </div>
    </section>
</form>
