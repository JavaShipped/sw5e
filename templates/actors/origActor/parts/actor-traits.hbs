        </div>
    {{/if}}
    {{#unless isVehicle}}
        <div class="form-group">
            <label>{{localize "SW5E.SpecialTraits"}}</label>
            <a
                class="config-button"
                data-action="flags"
                title="{{localize 'SW5E.TraitConfig' trait=(localize "SW5E.SpecialTraits")}}"
            >
                <i class="fas fa-cog"></i>
            </a>
        </div>
    {{/unless}}
</div>