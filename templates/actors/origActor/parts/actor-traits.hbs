<div class="traits">
    <div class="form-group">
        <label>{{localize "SW5E.Size"}}</label>
        <select class="actor-size" name="system.traits.size">
            {{#select system.traits.size}}
                {{#each config.actorSizes as |label size|}}
                    <option value="{{size}}">{{label}}</option>
                {{/each}}
            {{/select}}
        </select>
    </div>

    {{#unless isVehicle}}
        <div class="form-group">
            <label>{{localize "SW5E.Senses"}}</label>
            <a class="config-button" data-action="senses" title="{{localize 'SW5E.SensesConfig'}}">
                <i class="fas fa-cog"></i>
            </a>
            <ul class="traits-list">
                {{#each senses as |v k|}}
                    <li class="tag {{k}}">{{v}}</li>
                {{/each}}
            </ul>
        </div>

        <div class="form-group {{system.traits.languages.cssClass}}">
            <label>{{localize "SW5E.Languages"}}</label>
            <a
                class="trait-selector"
                data-options="languages"
                data-target="system.traits.languages"
                title="{{localize 'SW5E.TraitConfig' trait=(localize "SW5E.Languages")}}"
                tabindex="0"
            >
                <i class="fas fa-edit"></i>
            </a>
            <ul class="traits-list">
                {{#each system.traits.languages.selected as |v k|}}
                    <li class="tag {{k}}">{{v}}</li>
                {{/each}}
            </ul>
        </div>
    {{/unless}}

    <div class="form-group {{system.traits.di.cssClass}}">
        <label>{{localize "SW5E.DamImm"}}</label>
        <a
            class="trait-selector"
            data-options="damageTypes"
            data-target="system.traits.di"
            title="{{localize 'SW5E.TraitConfig' trait=(localize "SW5E.DamImm")}}"
            tabindex="0"
        >
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
            {{#each system.traits.di.selected as |v k|}}
                <li class="tag {{k}}">{{v}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="form-group {{system.traits.dr.cssClass}}">
        <label>{{localize "SW5E.DamRes"}}</label>
        <a
            class="trait-selector"
            data-options="damageTypes"
            data-target="system.traits.dr"
            title="{{localize 'SW5E.TraitConfig' trait=(localize "SW5E.DamRes")}}"
            tabindex="0"
        >
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
            {{#each system.traits.dr.selected as |v k|}}
                <li class="tag {{k}}">{{v}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="form-group {{system.traits.dv.cssClass}}">
        <label>{{localize "SW5E.DamVuln"}}</label>
        <a
            class="trait-selector"
            data-options="damageTypes"
            data-target="system.traits.dv"
            title="{{localize 'SW5E.TraitConfig' trait=(localize "SW5E.DamVuln")}}"
        >
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
            {{#each system.traits.dv.selected as |v k|}}
                <li class="tag {{k}}">{{v}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="form-group {{system.traits.ci.cssClass}}">
        <label>{{localize "SW5E.ConImm"}}</label>
        <a
            class="trait-selector"
            data-options="conditionTypes"
            data-target="system.traits.ci"
            title="{{localize 'SW5E.TraitConfig' trait=(localize "SW5E.ConImm")}}"
        >
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
            {{#each system.traits.ci.selected as |v k|}}
                <li class="tag {{k}}">{{v}}</li>
            {{/each}}
        </ul>
    </div>

    {{#if isCharacter}}
        <div class="form-group {{system.traits.weaponProf.cssClass}}">
            <label>{{localize "SW5E.TraitWeaponProf"}}</label>
            <a
                class="proficiency-selector"
                data-type="weapon"
                data-target="system.traits.weaponProf"
                title="{{localize 'SW5E.TraitConfig' trait=(localize "SW5E.TraitWeaponProf")}}"
            >
                <i class="fas fa-edit"></i>
            </a>
