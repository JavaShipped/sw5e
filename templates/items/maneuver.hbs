<form class="{{cssClass}} flexcol" autocomplete="off">
    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'SW5E.ManeuverName' }}" />
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{itemType}}</h4>
            </div>

            <ul class="summary flexrow">
                <li>{{labels.maneuverType}}</li>
                <li>
                    <input
                        type="text"
                        name="system.source"
                        value="{{system.source}}"
                        placeholder="{{ localize 'SW5E.Source' }}"
                    />
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SW5E.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SW5E.Details" }}</a>
        <a class="item" data-tab="effects">{{ localize "SW5E.Effects" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "sw5e.item-description"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            <h3 class="form-header">{{ localize "SW5E.ManeuverDetails" }}</h3>

            {{!-- Maneuver Type --}}
            <div class="form-group">
                <label>{{ localize "SW5E.ManeuverType" }}</label>
                <select name="system.maneuverType">
                    {{#select system.maneuverType}} {{#each config.maneuverTypes as |name type|}}
                    <option value="{{type}}">{{name}}</option>
                    {{/each}} {{/select}}
                </select>
            </div>

            {{!-- Item Activation Template --}}
            {{> "sw5e.item-activation"}}

            <h3 class="form-header">{{ localize "SW5E.ManeuverAttack" }}</h3>

            {{!-- Item Action Template --}}
            {{> "sw5e.item-action"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "sw5e.active-effects"}}
        </div>
    </section>
</form>
